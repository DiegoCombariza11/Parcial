<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <%-include ('templates/header.ejs')%>  
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Descripción</th>
                    <th>Stock</th>
                    <th>Valor</th>
                    <th>Stock Mínimo</th>
                    <th></th> <!-- botones-->
                </tr>
            </thead>
            <tbody>
                <% data.forEach(product => { %>
                    <tr>
                        <td><%= product.code %></td>
                        <td><%= product.description %></td>
                        <td><%= product.stock %></td>
                        <td><%= product.value %></td>
                        <td><%= product['sotck-min'] %></td>
                        <td><button onclick="addProductToSale('<%= JSON.stringify(product) %>')" class="btn btn-primary">Agregar al carrito</button></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <button id="checkout-button" class="btn btn-primary">Finalizar Compra</button>
    
    <script src="../public/index.js"></script>
    <%- include("templates\\footer.ejs") %>
</body>
</html>
